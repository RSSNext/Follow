{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@pkg": [
        "../../package.json"
      ],
      "@locales/*": [
        "../../locales/*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  }
}