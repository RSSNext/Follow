{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "baseUrl": ".",
    "noImplicitReturns": false,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client", "@follow/types/global", "@follow/types/react"],
    "paths": {
      "~/*": ["src/*"],
      "@pkg": ["../../package.json"],
      "@locales/*": ["../../locales/*"]
    }
  }
}
