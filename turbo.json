{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "tasks": {
    "@follow/desktop#build": {
      "outputs": ["dist/**", "out/**"]
    },
    "@follow/desktop#build:web": {
      "outputs": ["out/**"]
    },
    "@follow/desktop#build:macos": {
      "outputs": ["dist/**", "out/**"]
    },
    "@follow/desktop#build:mas": {
      "outputs": ["dist/**", "out/**"]
    },
    "@follow/desktop#build:render": {
      "outputs": ["out/**"]
    },
    "//#format:check": {},
    "//#lint": {},
    "test": {},
    "@follow/electron-main#build": {
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "dependsOn": ["@follow/electron-main#build"]
    },
    "@follow/server#build": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
