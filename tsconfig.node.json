{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "types/**/*.d.ts",
    "src/shared/src/**/*",
    "src/env.ts",
    "./src/hono.ts",
    "./src/renderer/src/atoms/settings/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/src/*"
      ],
      "@env": [
        "./src/env.ts"
      ],
      "@pkg": [
        "./package.json"
      ]
    }
  }
}
